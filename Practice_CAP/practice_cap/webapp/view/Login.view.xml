<mvc:View controllerName="app.practicecap.controller.Login"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:field="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" height="100%">

    <Page title="Login Page" showHeader="false" class="loginPage">
        <content>
            <FlexBox justifyContent="Center" alignItems="Center" class="fullHeightWidth">
                <items>
                    <f:Card class="centeredCard">
                        <f:content>
                            <FlexBox class="sapUiMediumMargin" justifyContent="Center" alignItems="Center">
                                <VBox class="sapUiTinyMargin" justifyContent="Center" alignItems="Center" width="80%">
                                    <items>
                                        <HBox alignItems="Center" class="sapUiSmallMarginBottom">
                                             <Image src="images\logo.jpg" alt="Logo"  height="75px"/>
                                            <Title class="sapUiTinyMarginBegin" wrapping="true" titleStyle="H2"  />
                                        </HBox>
                                        <form:SimpleForm class="loginForm" layout="ResponsiveGridLayout" labelSpanL="4" labelSpanM="4" emptySpanL="2" emptySpanM="2" columnsL="2" columnsM="1" singleContainerFullSize="true">
                                            <form:content>
                                                <!-- <Title text="Login" level="H1" class="loginTitle"/> -->
                                                <Label text="Username"/>
                                                <Input placeholder="Enter Username" value="{/username}" liveChange=".onInputChange" class="loginInput"/>
                                                <Label text="Password"/>
                                                <Input type="Password" placeholder="Enter Password" value="{/password}" liveChange=".onInputChange" class="loginInput"/>
                                                <Button text="Login" press=".onLoginPress" enabled="{/isLoginEnabled}" class="loginButton"/>
                                                
                                            </form:content>
                                        </form:SimpleForm>
                                    </items>
                                </VBox>
                            </FlexBox>
                        </f:content>
                    </f:Card>
                </items>
            </FlexBox>
        </content>
    </Page>
</mvc:View>

